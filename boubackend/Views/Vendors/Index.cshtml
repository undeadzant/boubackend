                @Html.DisplayFor(modelItem => item.IsPaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsApproved)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VendorsId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VendorsId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VendorsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
